@using EvSef.Web.ViewComponents
@model EvSef.Domain.ViewModels.Account.RegisterPersonViewModel


<!--Register-->

<div class="reg-container d-flex align-items-center auth px-0">
    <div class=" row w-100 mx-0">
        <div class="col-12 col-xl-6 col-xxl-4 mx-auto reg-form regist-form">
            <div class="    auth-form-light text-left py-5 px-4 px-sm-5 mx-auto">
                <div class="brand-logo">
                </div>
                <h4 id="RegisterModalLabel">New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form asp-controller="Account" asp-action="RegisterPerson" method="post" enctype="multipart/form-data">
                    <div class="control-group">
                        <div class="input-group">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Name" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="far fa-user"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="control-group">
                        <div class="input-group">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Surname" />
                            <span asp-validation-for="LastName"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="far fa-user"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="control-group">
                        <div class="input-group">
                            <input asp-for="Mobile" type="number" class="form-control" placeholder="Mobile" />
                            <span asp-validation-for=" Mobile"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fa fa-mobile-alt"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="control-group">
                        <div class="input-group">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <span asp-validation-for=" Email"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="far fa-envelope"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="control-group">
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for=" Password"></span>

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>



                    <div class="mt-3">
                        <button class="btn btn-block btn-signin auth-form-btn w-100" type="submit">SIGN UP</button>
                    </div>
                </form>
                <div class="text-center mt-4 font-weight-light">
                    Already have an account?
                    <button class="text-primary login-border" data-toggle="ajax-modal" data-target="#Login"
                            data-url="@Url.Action("Login", "Account")" data-id="get">Login</button>
                </div>

            </div>
        </div>
    </div>
</div>


<!-- End Register-->