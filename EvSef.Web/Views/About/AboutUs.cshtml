@using EvSef.Core.FilePath
@model IEnumerable<EvSef.Domain.ViewModels.AboutUs.AboutUsViewModel>
@{
    ViewData["Title"] = "About Us";
}

<!-- About Start -->

<div id="about" class="container-xl py-5 mb-4">
    <div class="container">
        <div class="row g-5">
        
        @foreach (var item in Model)
        {

            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row img-twice position-relative h-100">


                    <div class="col-6">
                            <img class="img-fluid rounded" src="@(FilePath.AboutUsImage + item.AboutUsImage1)" alt="AboutUsImage1">
                    </div>
                    <div class="col-6 align-self-end">
                            <img class="img-fluid rounded" src="@(FilePath.AboutUsImage + item.AboutUsImage2)" alt="AboutUsImage2">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100">

                    <h1 class="display-6 mb-4">@item.AboutUsTitle</h1>


                    <p>@item.AboutUsDescription</p>
                     <div class="row g-2 mb-4">
                        <div class="col-sm-6">
                            <i class="fa fa-check text-primary me-2"></i>Quality Products
                        </div>
                        <div class="col-sm-6">
                            <i class="fa fa-check text-primary me-2"></i>Custom Products
                        </div>
                        <div class="col-sm-6">
                            <i class="fa fa-check text-primary me-2"></i>Online Order
                        </div>
                        <div class="col-sm-6">
                            <i class="fa fa-check text-primary me-2"></i>Home Delivery
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
    </div>
</div>
<!-- About End -->