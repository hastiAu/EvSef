
@using EvSef.Core.FilePath
@model IEnumerable<EvSef.Domain.ViewModels.Chef.ChefViewModel>

<div class=" py-1">
    <div class="container">


        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">

            <h2 class=" text-uppercase  section-title ff-secondary text-center text-primary fw-normal mb-4 my-4">@ViewData["OurChefTitle"]</h2>

            <div class="form-group">
                <input type="submit" value="Moms" class="btn  mas py-3 px-5">
            </div>
        </div>
      
        <div class="row  ">
            @foreach (var chef in Model)
            {
            <div class="col-lg-3 col-md-6 wow fadeInUp  " data-wow-delay="0.1s">
                <div class="team-item text-center rounded overflow-hidden">
                        <img class="img-fluid" src=@(FilePath.ChefAvatarImage + chef.ChefAvatar) alt="ChefAvatar" style="width: 271.5px; height: 271.5px;">
                    <div class="team-text">
                        <div class="team-title">
                            <h5>@chef.FirstName @chef.LastName</h5>

                        </div>
                        <div class="team-social">
                                <a class="btn btn-square btn-light rounded-circle" href="@ViewData["InstagramUrl"]"><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-square btn-light rounded-circle" href=""><i class="far fa-user "></i></a>

                        </div>
                    </div>
                </div>
            </div>

            }
        </div>

   
    
    </div>

</div>