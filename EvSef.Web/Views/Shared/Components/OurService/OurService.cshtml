@model IEnumerable<EvSef.Domain.ViewModels.OurService.OurServiceViewModel>
@{
    ViewData["Title"] = "OurService";
}


<div class="py-1 service-position">
    <div class="container">
        <div class="text-center">
            <h2 class="text-uppercase section-title ff-secondary text-center text-primary fw-normal mb-4 my-4">@ViewData["OurServiceTitle"]</h2>
        </div>
        @if (Model.Any())
        {
            <div class="container">
                <div class="row g-4 service-row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="service-item rounded pt-3">
                                <div class="p-4">
                                    <i class="fa fa-3x @item.OurServiceFontName text-primary mb-4"></i>
                                    <h5>@item.OurServiceTitle</h5>
                                    <p>@item.OurServiceDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>


