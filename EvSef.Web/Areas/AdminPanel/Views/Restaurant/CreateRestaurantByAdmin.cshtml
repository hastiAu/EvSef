@model EvSef.Domain.ViewModels.Restaurant.CreateRestaurantViewModel
@{
    ViewData["Title"] = "CreateRestaurantByAdmin";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Create Restaurant</a></li>
        </ol>
    </div>
</div>


<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <form asp-controller="Restaurant" asp-action="CreateRestaurantByAdmin" method="post" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="RestaurantName">Restaurant Name</label>
                                        <input asp-for="RestaurantName" type="text" class="form-control">
                                        <span asp-validation-for="RestaurantName"></span>
                                    </div>


                                    <div class="form-group col-md-6">
                                        <label asp-for="RestaurantUrl">Restaurant Url</label>
                                        <input type="url" asp-for="RestaurantUrl" class="form-control" placeholder="Url">
                                        <span asp-validation-for="RestaurantUrl"></span>
                                    </div>
                                </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Order">Order Url</label>
                                    <input asp-for="Order" class="form-control" placeholder="Priority">
                                    <span asp-validation-for="Order"></span>
                            </div>
                       

                                <div class="form-group">
                                    <div class="form-check">
                                        <input id="checkbox" class="form-check-input" type="checkbox" asp-for="IsActive">
                                        <label for="checkbox" class="form-check-label">Active</label>
                                    </div>
                                </div>




                                <div class="col-md-12 col-sm-12">
                                    <div class=" ">
                                        <button type="submit" class="button-body btn mb-1 btn-lg custom-btn-create button-float">Create Restaurant </button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






