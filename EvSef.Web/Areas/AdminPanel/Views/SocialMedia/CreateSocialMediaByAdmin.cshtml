@model EvSef.Domain.ViewModels.SocialMedia.CreateSocialMediaViewModel

@{
    ViewData["Title"] = "CreateSocialMedia";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Create Social Media</a></li>
        </ol>
    </div>
</div>


<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <form asp-controller="SocialMedia" asp-action="CreateSocialMediaByAdmin" method="post" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="SocialMediaName">Social Media Name</label>
                                        <input asp-for="SocialMediaName" type="text" class="form-control">
                                        <span asp-validation-for="SocialMediaName"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="SocialMediaUrl">Social Media Url</label>
                                        <input type="url" asp-for="SocialMediaUrl" class="form-control" placeholder="Url">
                                        <span asp-validation-for="SocialMediaUrl"></span>
                                    </div>


                                    <div class="form-group col-md-6">
                                        <label asp-for="SocialMediaIconName">Social Media IconName</label>
                                        <input asp-for="SocialMediaIconName" class="form-control">
                                        <span asp-validation-for="SocialMediaIconName"></span>
                              


                                    <p>
                                        You Can Use This Icon Name for Social media Network.

                                        <ul>
                                            <li><span class="mdi mdi-circle-small">icon-linkedin</span></li>
                                            <li><span class="mdi mdi-circle-small">icon-facebook</span></li>
                                            <li><span class="mdi mdi-circle-small">icon-instagram</span></li>
                                            <li><span class="mdi mdi-circle-small">icon-telegram</span></li>
                                            <li><span class="mdi mdi-circle-small">icon-github</span></li>
                                            <li><span class="mdi mdi-circle-small">icon-retweet</span></li>


                                        </ul>
                                    </p>
                                    </div>
                               

                                <div class="form-group mt-5 ml-5">
                                    <div class="form-check">
                                        <input id="checkbox" class="form-check-input" type="checkbox" asp-for="IsActive">
                                        <label for="checkbox" class="form-check-label">Active</label>
                                    </div>
                                </div>
                                </div>



                                <div class="col-md-12 col-sm-12">
                                    <div class=" ">
                                        <button type="submit" class="button-body btn mb-1 btn-lg custom-btn-create button-float">Create Social Media</button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




