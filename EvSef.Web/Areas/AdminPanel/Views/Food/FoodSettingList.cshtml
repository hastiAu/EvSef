@model IEnumerable<EvSef.Domain.ViewModels.PriceType.AdminListPriceTypeViewModel>
@{
    ViewData["Title"] = "FoodSettingList";
}



<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">FoodSetting List</a></li>
            </ol>
        </div>
    </div>

    <div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorText))
        {
            <div class="content-body-alert card-costum alert alert-danger">
                <p> @ViewBag.ErrorText </p>
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.SuccessText))
        {
            <div class="content-body-alert alert alert-info">
                <p>@ViewBag.SuccessText</p>

            </div>
        }
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form asp-controller="Food" asp-action="FoodSettingList" method="get" id="OurServiceForm">
             
                    <div class="card">
                        <div class="card-body row">

                   

                            <div class="col-md-3 col-sm-12">
                                <div>
                                    <a asp-controller="Food" asp-action="CreateFoodSettingByAdmin" class="button-body btn mb-1 btn-lg custom-btn-create">New Food Setting</a>

                                </div>

                            </div>

                        </div>
                    </div>
                </form>
                <p></p>
                <!-- /# column -->
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            @if (Model.Any())
                            {
                                <div class="card-title">
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>


                                                <th class="text-center">PriceType Name </th>
                                                <th class="text-center">PriceType Default</th>
                                                <th class="text-center">Operation</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var priceType in Model)
                                            {
                                                <tr>


                                                    <td class="text-center">@priceType.PriceTypeName  </td>


                                                    <td class="text-center">

                                                    @if (priceType.PriceTypeIsDefault==true)
                                                    {
                                                    <i class="fa fa-check text-success"></i>
                                                    
                                                    }
                                                    else
                                                    {
                                                    <i class="fa fa-close text-danger"></i>
                                                    }


                                                    </td>

                                                    <td class="text-center">

                                                        <a title="Edit" data-toggle="tooltip">
                                                            <i class="icon-size mdi mdi-account-edit"></i>
                                                        </a>
                                                        <a title="Delete" data-toggle="tooltip">
                                                            <i class="icon-size mdi mdi-delete"></i>
                                                        </a>


                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            }

                            else
                            {
                                <div class="alert alert-danger">
                                    <strong>There Is not any  Price Type Name.</strong>
                                </div>
                            }
                            <!-- /# column -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







