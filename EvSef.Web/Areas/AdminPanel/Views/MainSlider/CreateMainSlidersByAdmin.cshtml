@model EvSef.Domain.ViewModels.MainSlider.CreateMainSliderViewModel
@{
    ViewData["Title"] = "CreateMainSlider";
}

 

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Create Main Slider</a></li>
        </ol>
    </div>
</div>


<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <form asp-controller="MainSlider" asp-action="CreateMainSlidersByAdmin" method="post" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="SliderTitle">Slider Title</label>
                                        <input asp-for="SliderTitle" type="text" class="form-control">
                                        <span asp-validation-for="SliderTitle"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label asp-for="SliderPhoto">Slider Photo1</label>
                                        <input asp-for="SliderPhoto" class="form-control" placeholder="Slider">
                                        <span asp-validation-for="SliderPhoto"></span>
                                    </div>

                               
                                    <div class="form-group col-md-12">
                                        <label asp-for="SliderDescription">Slider Description</label>
                                        <textarea asp-for="SliderDescription" class="form-control"></textarea>
                                        <span asp-validation-for="SliderDescription"></span>
                                    </div>
                                </div>

                               
                             
                                <div class="form-group ">
                                    <div class="form-check">
                                        <input id="checkbox" class="form-check-input" type="checkbox" asp-for="IsActive">
                                        <label for="checkbox" class="form-check-label">Active</label>
                                    </div>
                                </div>


                                <div class="col-md-12 col-sm-12">
                                    <div class=" ">
                                        <button type="submit" class="button-body btn mb-1 btn-lg custom-btn-create button-float">Create Main Slider</button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






